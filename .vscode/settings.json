{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "off",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.nx": true,
        "**/.idea": true,
        "**/.husky": true,
        "**/.github": false,
        "**/node_modules": true,
        "**/reports": true,
        "**/tmp": true,
    },
    "css.customData": [
        ".vscode/tailwind.json"
    ],
    "[vue]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "shakram02.bash-beautify"
    },
}