{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.vue",
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/language/translations.json",
        "node_modules/vite-plugin-pwa/client.d.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.vue",
        "src/**/*.test.vue",
        "src/**/__tests__/*",
        "node_modules/@flavorly/vanilla-components/*",
    ],
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": [
            "vite/client"
        ],
        "skipLibCheck": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}