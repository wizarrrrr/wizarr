{
    "name": "wizarr-frontend",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/wizarr-frontend/src",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/wizarr-frontend/**/*.{ts,tsx,js,jsx,vue}"]
            }
        },
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/apps/wizarr-frontend",
                "skipTypeCheck": true
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "wizarr-frontend:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "wizarr-frontend:build:development",
                    "hmr": true
                },
                "production": {
                    "buildTarget": "wizarr-frontend:build:production",
                    "hmr": false
                }
            }
        },
        "preview": {
            "executor": "@nx/vite:preview-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "wizarr-frontend:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "wizarr-frontend:build:development"
                },
                "production": {
                    "buildTarget": "wizarr-frontend:build:production"
                }
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/apps/wizarr-frontend"
            }
        },
        "serve-static": {
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "wizarr-frontend:build"
            }
        },
        "gettext": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["nx run wizarr-frontend:gettext:extract", "nx run wizarr-frontend:gettext:compile"],
                "parallel": false
            }
        },
        "gettext:extract": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["cd apps/wizarr-frontend && npx vue-gettext-extract"],
                "parallel": false
            }
        },
        "gettext:compile": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["cd apps/wizarr-frontend && npx vue-gettext-compile"],
                "parallel": false
            }
        },
        "storybook": {
            "executor": "@nx/storybook:storybook",
            "options": {
                "port": 4400,
                "configDir": "apps/wizarr-frontend/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nx/storybook:build",
            "outputs": ["{options.outputDir}"],
            "options": {
                "outputDir": "dist/storybook/wizarr-frontend",
                "configDir": "apps/wizarr-frontend/.storybook"
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "test-storybook": {
            "executor": "nx:run-commands",
            "options": {
                "command": "test-storybook -c apps/wizarr-frontend/.storybook --url=http://localhost:4400"
            }
        }
    }
}
